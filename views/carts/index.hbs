{{#extends "base"}}

{{#block "content"}}
<h1>My Shopping Cart</h1>

<ul class="list-group">
    {{#each shoppingCart}}
    <li class="list-group-item my-3">
        <h4>{{this.card.name}}</h4>
        <h5>Expansion: {{this.card.expansion.name}}</h5>
        <h5>Cost: {{this.card.cost}}</h5>
        <form method="POST"
            action="/cart/{{this.card.id}}/quantity/update">
            <input type="hidden" value="{{../csrfToken}}" name="_csrf"/>
            <h5>
                    Quantity: <input type="text" name="newQuantity" value="{{this.quantity}}" style="width:30px" /> 
                    <input type="submit" value="Update Quantity" class="btn btn-success btn-sm" />
                </h5>
        </form>
        <div>
            <a href="/cart/{{this.card.id}}/remove" class="btn btn-danger">Remove</a>
        </div>
    </li>
    {{/each}}
</ul>

{{/block}}

{{/extends}}